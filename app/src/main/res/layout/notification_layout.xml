<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/itunes_no_artwork"
            android:layout_weight="1"
            android:id="@+id/notif_album"
            android:layout_width="0dp"
            android:layout_height="160dp"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:lines="1"
                android:id="@+id/notif_artist"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/undefined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:lines="1"
                android:id="@+id/notif_name"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/undefined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/notif_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:rotation="180"
            android:src="@drawable/ic_mini_player_next_28"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/notif_pause"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_48"
            android:tint="@color/main_vk_color"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/notif_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/ic_mini_player_next_28"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</LinearLayout>